<Defs>

	<!--Mandalorian Helmet Base-->
  <ThingDef Name="JDSMandalorianHelmet" ParentName="ArmorMachineableBase" Abstract="True">
		<description>Traditional Mandalorian helmets often had a macrobinocular viewplate, tactical displays, a comlink and an antenna tipped with a rangefinder that could be pulled over the viewplate to enhance imagery</description>
		<techLevel>Industrial</techLevel>
		<tradeability>Sellable</tradeability>
	<graphicData>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>

    <statBases>
		<WorkToMake>11500</WorkToMake>
		<MaxHitPoints>250</MaxHitPoints>
		<Mass>2.4</Mass>
		<Flammability>0</Flammability>
		<ArmorRating_Sharp>0.80</ArmorRating_Sharp>
		<ArmorRating_Blunt>0.33</ArmorRating_Blunt>
		<ArmorRating_Heat>0.75</ArmorRating_Heat>
		<Insulation_Cold>5</Insulation_Cold>
		<Insulation_Heat>3</Insulation_Heat>
		<EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
		<ToxicSensitivity>-0.80</ToxicSensitivity>
		<SocialImpact>0.35</SocialImpact>
		<ShootingAccuracyPawn>0.25</ShootingAccuracyPawn>
		<NegotiationAbility>0.05</NegotiationAbility>
	</equippedStatOffsets>

    <costList>
		<Plasteel>50</Plasteel>
		<ComponentIndustrial>4</ComponentIndustrial>
		<ComponentSpacer>1</ComponentSpacer>
    </costList>
    <recipeMaker>
		<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
		<researchPrerequisite>JDSMandalorianCustomSet</researchPrerequisite>
		<skillRequirements>
			<Crafting>10</Crafting>
		</skillRequirements>
		<recipeUsers Inherit="False">
			<li>JDSForge</li>
        </recipeUsers>
    </recipeMaker>
	
    <apparel>
		<bodyPartGroups>
			<li>FullHead</li>
		</bodyPartGroups>
		<layers>
			<li>Overhead</li>
		</layers>
		<tags>
			<li>JDSMandalorianHelmet</li>
		</tags>
		<defaultOutfitTags>
			<li>Soldier</li>
		</defaultOutfitTags>
		<useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
	<thingCategories Inherit="False">
		<li>Headgear</li>
	</thingCategories>
  </ThingDef>

